pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Quetz4l/edu-metrix-front-back.git'
            }
        }

        stage('Test') {
            steps {
                echo 'Tests'
                sh 'npm run lint'
            }
        }

        stage('Build Docker Forntend') {
            steps {
                echo 'Docker build frontend'
                sh 'cd frontend & docker build -t frontend:latest /vagrant/docker'
            }
        }

        stage('Build Docker Backend') {
            steps {
                echo 'Docker build backend'
                sh 'cd backend & docker build -t backend:latest /vagrant/docker'
            }
        }
    }

    post {
        failure {
            echo 'the tests failed'
        }
        success {
            echo 'the tests were successful'
        }
    }
} 
